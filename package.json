{
  "name": "andrewdibble.com",
  "version": "1.0.0",
  "description": "My personal website.",
  "author": "acdibble <acdibble@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "parcel public/index.html",
    "server": "node_modules/.bin/nodemon src/server --watch src/server",
    "start": "node src/server",
    "lint": "eslint --ext .js src",
    "build": "parcel build public/index.html",
    "clean-build": "rm -rf dist && mkdir dist && cp -r public/assets dist && npm run build",
    "heroku-postbuild": "npm run clean-build",
    "gc": "pm2 start src/server -- --production"
  },
  "dependencies": {
    "@types/mithril": "^2.0.0",
    "body-parser": "^1.18.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "mithril": "^2.0.4",
    "mongoose": "^5.3.4"
  },
  "devDependencies": {
    "eslint": "^4.15.0",
    "eslint-config-airbnb-base": "^11.3.0",
    "eslint-plugin-import": "^2.7.0",
    "nodemon": "^1.18.10",
    "parcel-bundler": "^1.12.3"
  },
  "engines": {
    "node": ">= 10.0.0",
    "npm": ">= 6.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
